@using Shared.DTOs
@model OrderDetailsDto

<div class="order-details-popup">
    <h2>Order #@Model.OrderId</h2>
    <p><strong>Status:</strong> @Model.Status</p>
    <p><strong>Ordered For:</strong> @Model.OrderFor</p>
    <p><strong>Created At:</strong> @Model.CreatedAt.ToString("g")</p>
    <p><strong>Total Amount:</strong> $@Model.TotalAmount</p>

    <h4>Items:</h4>
    <ul>
        @foreach (var item in Model.OrderItems)
        {
            <li>
                <img src="@item.ImageURL" alt="Product" style="width: 50px;" />
                Qty: @item.Quantity
            </li>
        }
    </ul>

    <h4>Payment:</h4>
    <p>Method: @Model.Payment?.PaymentMethod</p>
    <p>Date: @Model.Payment?.PaidAt</p>

    <h4>Invoice:</h4>
    <p>Invoice Number: @Model.Invoice?.InvoiceNumber</p>

    <div class="actions">
        <form method="get" asp-action="UpdateOrder" asp-route-id="@Model.OrderId" style="display:inline">
            <button type="submit" class="btn btn-danger">Delete Order</button>
        </form>
        <form method="post" asp-action="DeleteOrder" asp-route-id="@Model.OrderId" style="display:inline">
            <button type="submit" class="btn btn-danger">Delete Order</button>
        </form>
    </div>
</div>

