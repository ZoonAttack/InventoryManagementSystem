@model CreateOrderViewModel

@{
    ViewData["Title"] = "Update Order";
}

<h2>Update Order</h2>

<form asp-action="UpdateOrder" method="post">
    <input type="hidden" asp-for="OrderId" />

    <div class="form-group">
        <label for="Order_Status">Order Status</label>
        <select asp-for="Order.PaymentMethod" name="Order.Status" class="form-control">
            @foreach (var status in Model.OrderStatuses)
            {
                <option value="@status" selected="@(Model.Order.PaymentMethod == status.ToString())">@status</option>
            }
        </select>
    </div>

    <div class="form-group">
        <label asp-for="Order.ShippingAddress">Shipping Address</label>
        <input asp-for="Order.ShippingAddress" class="form-control" />
    </div>

    @* Optional: Show OrderItems read-only *@
    <div class="form-group">
        <label>Items</label>
        <ul class="list-group">
            @foreach (var item in Model.Order.OrderItems)
            {
                <li class="list-group-item">
                    Product ID: @item.ProductId |
                    Quantity: @item.Quantity
                </li>
            }
        </ul>
    </div>

    <button type="submit" class="btn btn-primary mt-3">Save Changes</button>
</form>
