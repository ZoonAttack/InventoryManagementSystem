@model CreateProductViewModel
@{
    ViewData["Title"] = "Update Product";
}

<link rel="stylesheet" href="~/css/update-product.css" />

<div class="update-product-container">
    <h2>Update Product</h2>

    <form asp-action="UpdateProduct" method="post" class="update-product-form">
        <input type="hidden" asp-for="@Model.ProductId" />

        <div class="form-group">
            <label asp-for="@Model.Product.Name"></label>
            <input asp-for="@Model.Product.Name" class="form-control" />
        </div>

        <div class="form-group">
            <label asp-for="@Model.Product.Description"></label>
            <textarea asp-for="@Model.Product.Description" class="form-control"></textarea>
        </div>

        <div class="form-group">
            <label asp-for="@Model.Product.Price"></label>
            <input asp-for="@Model.Product.Price" class="form-control" />
        </div>

        <div class="form-group">
            <label asp-for="@Model.Product.Status">Status</label>
            <select asp-for="@Model.Product.Status" class="form-control">
                @foreach (var status in Model.productStatuses)
                {
                    <option value="@status.ToString()" selected="@(Model.Product.Status == status.ToString())">
                        @status
                    </option>
                }
            </select>
        </div>

        <div class="form-group">
            <label asp-for="@Model.Product.CategoryId">Category</label>
            <select asp-for="@Model.Product.CategoryId" class="form-control">
                @foreach (var category in Model.Categories)
                {
                    <option value="@category.CategoryId" selected="@(Model.Product.CategoryId == category.CategoryId)">
                        @category.Name
                    </option>
                }
            </select>
        </div>

        <div class="form-group">
            <label asp-for="@Model.Product.ImageUrl"></label>
            <input asp-for="@Model.Product.ImageUrl" class="form-control" />
        </div>

        <button type="submit" class="btn">Update</button>
    </form>
</div>
