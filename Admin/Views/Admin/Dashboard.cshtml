@model AdminDashboardViewModel
@{
    Layout = null;
}
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
<link rel="stylesheet" href="~/css/Dashboard.css" />
<body>
    <nav class="navbar">
        <div class="navbar-brand">
            <span class="app-name" id="app-name" style="color:#fff">My Dashboard</span>
        </div>

        <div class="button-row">
            <form method="get" asp-action="CreateProduct" asp-controller="Admin" style="display:inline;">
                <button type="submit" class="pink-button">Create Product</button>
            </form>

            <form method="get" asp-action="CreateOrder" asp-controller="Admin" style="display:inline;">
                <button type="submit" class="pink-button">Create Order</button>
            </form>
        </div>
         
        <form asp-controller="Admin" asp-action="Logout" method="post" style="display: inline;">
            <button type="submit" class="pink-button" id="logout-button">Logout</button>
        </form>
     
    </nav>
<div class="container my-4">
    <h2 class="mb-4">Products</h2>
    <div class="row row-cols-1 row-cols-md-3 g-4">
        @foreach (var product in Model.Products)
        {
            <div class="col">
                <div class="card h-100 product-card" data-id="@product.ProductId" data-type="product">
                    <div class="card-body">
                        <h5 class="card-title">@product.Name</h5>
                        <p class="card-text">Price: $@product.Price</p>
                    </div>
                </div>
            </div>
        }
    </div>

        <h2 class="my-5">Orders</h2>
        <div class="row row-cols-1 row-cols-md-3 g-4">
            @foreach (var order in Model.Orders)
            {
                <div class="col">
                    <div class="card h-100 order-card" data-id="@order.OrderId" data-type="order">
                        <div class="card-body">
                            <h5 class="card-title">Order #@order.OrderId</h5>
                            <p class="card-text">Customer: @order.OrderFor</p>
                            <p class="card-text">Status: @order.Status</p>

                            <button class="btn btn-outline-light view-details-btn" data-order-id="@order.OrderId">View / Print</button>

                        </div>
                    </div>
                </div>
            }
        </div>


    <!-- Modal -->
    <div class="modal fade" id="detailModal" tabindex="-1" aria-hidden="true">
        <div class="modal-dialog modal-lg modal-dialog-centered">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">Details</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                </div>
                <div class="modal-body" id="modalContent">
                    <!-- AJAX content goes here -->
                </div>
            </div>
        </div>
    </div>
        <!-- Modal -->
        <div class="modal fade" id="orderDetailsModal" tabindex="-1" aria-hidden="true">
            <div class="modal-dialog modal-lg modal-dialog-scrollable">
                <div class="modal-content" style="background-color: #1f1f1f; color: #f8b6c1;">
                    <div class="modal-header">
                        <h5 class="modal-title">order Detailsب</h5>
                        <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="close"></button>
                    </div>
                    <div class="modal-body" id="order-details-body">
                        <!-- سيتم تحميل التفاصيل هنا -->
                    </div>
                    <div class="modal-footer">
                        <button class="btn btn-secondary" onclick="printDiv('order-details-body')">Print</button>
                        <button class="btn btn-pink" onclick="downloadPDF()">download PDF</button>
                    </div>
                </div>
            </div>
        </div>

    
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
        <script>
            // عند الضغط على البطاقة (Product أو Order)
            $(document).on('click', '.product-card, .order-card', function (e) {
                // إذا كان العنصر المضغوط هو زر View/Print داخل البطاقة، لا تكمل
                if ($(e.target).hasClass('view-details-btn')) return;

                const id = $(this).data('id');
                const type = $(this).data('type');

                $('#modalContent').html('<div class="text-center my-4">Loading...</div>');
                $('#detailModal').modal('show');

                $.ajax({
                    url: `/Admin/GetDetailsPartial`,
                    type: 'GET',
                    data: { id: id, type: type },
                    success: function (html) {
                        $('#modalContent').html(html);
                    },
                    error: function () {
                        $('#modalContent').html('<div class="text-danger">faild</div>');
                    }
                });
            });
        </script>

        @section Scripts {
            <script src="https://cdnjs.cloudflare.com/ajax/libs/html2pdf.js/0.10.1/html2pdf.bundle.min.js"></script>
            <script>
                // تحميل التفاصيل داخل المودل الخاص بالـ PDF
                document.querySelectorAll('.view-details-btn').forEach(button => {
                    button.addEventListener('click', function () {
                        const orderId = this.getAttribute('data-order-id');

                        fetch(`/admin/GetDetailsPartial?id=${orderId}&type=order`)
                            .then(response => response.text())
                            .then(html => {
                                document.getElementById('order-details-body').innerHTML = html;
                                const modal = new bootstrap.Modal(document.getElementById('orderDetailsModal'));
                                modal.show();
                            });
                    });
                });

                // طباعة محتوى الديف
                function printDiv(divId) {
                    const printContents = document.getElementById(divId).innerHTML;
                    const printWindow = window.open('', '', 'height=700,width=900');
                    printWindow.document.write('<html><head><title>Print</title>');
                    printWindow.document.write('<style>body{font-family:sans-serif;background:#1f1f1f;color:#f8b6c1;} img{max-width:100px;}</style>');
                    printWindow.document.write('</head><body>');
                    printWindow.document.write(printContents);
                    printWindow.document.write('</body></html>');
                    printWindow.document.close();
                    printWindow.focus();
                    printWindow.print();
                    printWindow.close();
                }

                // تحميل PDF من الديف
                function downloadPDF() {
                    const element = document.getElementById('order-details-body');
                    const opt = {
                        margin:       0.5,
                        filename:     'order_invoice.pdf',
                        image:        { type: 'jpeg', quality: 0.98 },
                        html2canvas:  { scale: 2 },
                        jsPDF:        { unit: 'in', format: 'letter', orientation: 'portrait' }
                    };
                    html2pdf().set(opt).from(element).save();
                }
            </script>
        }

