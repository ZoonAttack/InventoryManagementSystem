@model AdminDashboardViewModel
@{
    Layout = null;
    // ViewData["Title"] = "Admin Dashboard";
}
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
<link rel="stylesheet" href="~/css/Dashboard.css" />
<body>
    <nav class="navbar">
        <div class="navbar-brand">
            <span class="app-name" id="app-name" style="color:#ff1493">My Dashboard</span>
        </div>

        <div class="button-row">
            <form method="get" asp-action="CreateProduct" asp-controller="Admin" style="display:inline;">
                <button type="submit" class="pink-button">Create Product</button>
            </form>

            <form method="get" asp-action="CreateOrder" asp-controller="Admin" style="display:inline;">
                <button type="submit" class="pink-button">Create Order</button>
            </form>
        </div>

        <div>
            <button class="pink-button" id="logout-button">Logout</button>
        </div>
    </nav>
<div class="container my-4">
    <h2 class="mb-4">Products</h2>
    <div class="row row-cols-1 row-cols-md-3 g-4">
        @foreach (var product in Model.Products)
        {
            <div class="col">
                <div class="card h-100 product-card" data-id="@product.ProductId" data-type="product">
                    <div class="card-body">
                        <h5 class="card-title">@product.Name</h5>
                        <p class="card-text">Price: $@product.Price</p>
                    </div>
                </div>
            </div>
        }
    </div>

    <h2 class="my-5">Orders</h2>
    <div class="row row-cols-1 row-cols-md-3 g-4">
        @foreach (var order in Model.Orders)
        {
            <div class="col">
                <div class="card h-100 order-card" data-id="@order.OrderId" data-type="order">
                    <div class="card-body">
                        <h5 class="card-title">Order #@order.OrderId</h5>
                        <p class="card-text">Customer: @order.OrderFor</p>
                        <p class="card-text">Status: @order.Status</p>
                    </div>
                </div>
            </div>
        }
    </div>
</div>

<!-- Modal -->
<div class="modal fade" id="detailModal" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog modal-lg modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Details</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body" id="modalContent">
                <!-- AJAX content goes here -->
            </div>
        </div>
    </div>
</div>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
<script>
    $(document).on('click', '.product-card, .order-card', function () {
        const id = $(this).data('id');
        const type = $(this).data('type');

        $('#modalContent').html('<div class="text-center my-4">Loading...</div>');
        $('#detailModal').modal('show');

        $.ajax({
            url: `/Admin/GetDetailsPartial`,
            type: 'GET',
            data: { id: id, type: type },
            success: function (html) {
                $('#modalContent').html(html);
            },
            error: function () {
                $('#modalContent').html('<div class="text-danger">Failed to load details.</div>');
            }
        });
    });
</script>
</body>
