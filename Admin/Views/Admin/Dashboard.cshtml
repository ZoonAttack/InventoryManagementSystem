@model AdminDashboardViewModel
@{

    Layout = null;
}
@* <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" /> *@
@* <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script> *@
<link rel="stylesheet" href="~/css/Dashboard.css" />
<body>
    <nav class="navbar">
        <div class="navbar-left">
            <span class="app-name" id="app-name">My Dashboard</span>
        </div>

        <div class="navbar-center button-row">
            <form method="get" asp-action="CreateProduct" asp-controller="Admin">
                <button type="submit" class="pink-button">Create Product</button>
            </form>
            <form method="get" asp-action="CreateCategories" asp-controller="Admin">
                <button type="submit" class="pink-button">Create Categories</button>
            </form>

            <form method="get" asp-action="CreateOrder" asp-controller="Admin">
                <button type="submit" class="pink-button">Create Order</button>
            </form>
        </div>

        <div class="navbar-right">
            <form method="post" asp-action="Logout" asp-controller="Admin">
                <button type="submit" class="pink-button">Logout</button>
            </form>
        </div>
    </nav>

    <div class="main-content">

        <!-- قسم المنتجات -->
        <div class="section-wrapper">
            <h2>Products</h2>
            <div class="card-grid">
                @foreach (var product in Model.Products.Take(12))
                {
                    <div class="card h-100 product-card" data-id="@product.ProductId" data-type="product">
                        <div class="card-body">
                            <h5 class="card-title">@product.Name</h5>
                            <p class="card-text">Price: $@product.Price</p>
                        </div>
                    </div>
                }
            </div>
        </div>

        <!-- قسم الطلبات -->
        <div class="section-wrapper">
            <h2>Orders</h2>
            <div class="card-grid">
                @foreach (var order in Model.Orders.Take(12))
                {
                    <div class="card h-100 order-card" data-id="@order.OrderId" data-type="order">
                        <div class="card-body">
                            <h5 class="card-title">Order #@order.OrderId</h5>
                            <p class="card-text">Customer: @order.OrderFor</p>
                            <p class="card-text">Status: @order.Status</p>
                        </div>
                    </div>
                }
            </div>
        </div>

    </div>

    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    @await Html.PartialAsync("_DetailsModal")


    <script>
        $(document).on('click', '.product-card, .order-card', function () {
            const id = $(this).data('id');
            const type = $(this).data('type');

            $('#modalContent').html('<div class="text-center my-4">Loading...</div>');
            $('#detailModal').modal('show');

            $.ajax({
                url: `/Admin/GetDetailsPartial`,
                type: 'GET',
                data: { id: id, type: type },
                success: function (html) {
                    $('#modalContent').html(html);
                },
                error: function () {
                    $('#modalContent').html('<div class="text-danger">Failed to load details.</div>');
                }
            });
        });

        // زر الطباعة يفتح نافذة جديدة
              document.getElementById('printModalBtn').addEventListener('click', function () {
            const printArea = document.querySelector('#modalContent .invoice-area');
            if (!printArea) return alert("No printable content found.");

            const printWindow = window.open('', '', 'height=600,width=800');
            printWindow.document.write('<html><head><title>Invoice</title>');
            printWindow.document.write('<style>body { font-family: Arial; padding: 20px; }</style>');
            printWindow.document.write('</head><body>');
            printWindow.document.write(printArea.innerHTML);
            printWindow.document.write('</body></html>');
            printWindow.document.close();
            printWindow.focus();
            printWindow.print();
            printWindow.close();
        });
    </script>
</body>
