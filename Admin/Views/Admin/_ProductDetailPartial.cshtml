@using Shared.DTOs
@model ProductDetailsDto

<div class="product-details-popup">
    <h2>@Model.Name</h2>
    <img src="@Model.ImageUrl" alt="@Model.Name" style="max-width: 200px" />
    <p><strong>Description:</strong> @Model.Description</p>
    <p><strong>Category:</strong> @Model.Category</p>
    <p><strong>Price:</strong> $@Model.Price</p>
    <p><strong>Status:</strong> @Model.Status</p>
    <div class="actions">
        <form method="get" asp-action="UpdateProduct" asp-route-id="@Model.Id" style="display:inline">
            <button type="submit" class="btn btn-outline-primary">Update Product</button>
        </form> 

        <form method="post" asp-action="DeleteProduct" asp-route-id="@Model.Id" style="display:inline">
            <button type="submit" class="btn btn-danger">Delete Product</button>
        </form>
    </div>
</div>
