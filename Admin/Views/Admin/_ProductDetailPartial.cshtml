@using Shared.DTOs
@model ProductDetailsDto
<link rel="stylesheet" href="~/css/Dashboard.css" />

<div class="product-detail-modal">
    <h3 class="product-title">@Model.Name</h3>

    <div class="product-detail-content">
        <div class="product-image-wrapper">
            <img src="@Model.ImageUrl" alt="@Model.Name" class="product-image" />
        </div>

        <div class="product-info">
            <p><strong>Description:</strong> @Model.Description</p>
            <p><strong>Category:</strong> @Model.Category</p>
            <p><strong>Price:</strong> $@Model.Price</p>
            <p><strong>Status:</strong> @Model.Status</p>

            <div class="product-action-buttons">
                <form method="get" asp-action="UpdateProduct" asp-route-Id="@Model.Id">
                    <button type="submit" class="btn-theme">Update Product</button>
                </form>

                <form method="post" asp-action="DeleteProduct" asp-route-Id="@Model.Id" onsubmit="return confirm('Are you sure?');">
                    <button type="submit" class="btn-danger">Delete Product</button>
                </form>
            </div>
        </div>
    </div>
</div>
